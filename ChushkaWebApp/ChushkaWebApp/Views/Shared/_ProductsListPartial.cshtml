@using ChushkaWebApp.Models.Products;
@model ProductsListViewModel

<div class="container-fluid">
    <div class="row justify-content-around mb-3">
        @for (int i = 0; i < @Model.Products.Count(); i++)
        {
            var product = @Model.Products.ElementAt(i);

            if (i % 5 == 0 && (i != 1 || i != 0))
            {
                @Html.Raw(" </div><div class=\"row d-flex justify-content-around mt-4\">")
            }
            <div class="col-md-2 p-1 chushka-bg-color rounded-top rounded-bottom">
                <h5 class="text-center mt-3"><a href="/products/details?id=@product.Id" class="col-md-2">@product.Name</a></h5>
                <hr class="hr-1 bg-white" />
                <p class="text-white text-center">
                    @product.ShortDescription
                </p>
                <hr class="hr-1 bg-white" />
                <h6 class="text-center text-white mb-3">$@product.Price</h6>
            </div>
        }

    </div>
</div>