@using ChushkaWebApp.Models.Products;
@model ProductViewModel;

<h1 class="text-center">Create Product</h1>
<hr class="bg-secondary hr-2" />
<form class="mx-auto half-width" asp-controller="Products" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Name..." name="name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="any" class="form-control" placeholder="Price..." name="price">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" name="description" cols="4" rows="3" placeholder="Description..."></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <h2 class="text-center">Product Type</h2>
    <hr class="bg-secondary hr-2 half-width" />
    <div class="channel-type-holder mt-4 d-flex justify-content-around">
        <div class="form-check form-check-inline">
            <input asp-for="ProductType" class="form-check-input" type="radio" id="food" name="productType" value="Food">
            <span asp-validation-for="ProductType"></span>
            <label class="form-check-label" for="food">Food</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="ProductType" class="form-check-input" type="radio" id="domestic" name="productType" value="Domestic">
            <span asp-validation-for="ProductType"></span>
            <label class="form-check-label" for="domestic">Domestic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="ProductType" class="form-check-input" type="radio" id="healh" name="productType" value="Health">
            <span asp-validation-for="ProductType"></span>
            <label class="form-check-label" for="healh">Health</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="ProductType" class="form-check-input" type="radio" id="cosmetic" name="productType" value="Cosmetic">
            <span asp-validation-for="ProductType"></span>
            <label class="form-check-label" for="cosmetic">Cosmetic</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="ProductType" class="form-check-input" type="radio" id="other" name="productType" value="Other">
            <span asp-validation-for="ProductType"></span>
            <label class="form-check-label" for="other">Other</label>
        </div>
    </div>
    <hr class="bg-secondary hr-2 half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}